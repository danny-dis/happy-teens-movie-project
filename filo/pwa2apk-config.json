{
  "name": "Filo",
  "short_name": "Filo",
  "description": "A fully decentralized P2P streaming platform",
  "theme_color": "#1A1A1A",
  "background_color": "#1A1A1A",
  "display": "standalone",
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "icons": [
    {
      "src": "resources/icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "splash_pages": {
    "src": "resources/splash.svg",
    "sizes": "1920x1080",
    "type": "image/svg+xml"
  },
  "app_settings": {
    "package_name": "com.zophlic.filo",
    "version_code": "1",
    "version_name": "1.0.0",
    "target_sdk_version": 33,
    "min_sdk_version": 21,
    "permissions": [
      "android.permission.INTERNET",
      "android.permission.ACCESS_NETWORK_STATE",
      "android.permission.ACCESS_WIFI_STATE",
      "android.permission.WAKE_LOCK",
      "android.permission.VIBRATE",
      "android.permission.RECEIVE_BOOT_COMPLETED",
      "android.permission.FOREGROUND_SERVICE",
      "android.permission.READ_EXTERNAL_STORAGE",
      "android.permission.WRITE_EXTERNAL_STORAGE",
      "android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
    ],
    "features": [
      "android.hardware.touchscreen",
      "android.hardware.faketouch",
      "android.hardware.screen.portrait",
      "android.hardware.wifi"
    ]
  },
  "pwa_settings": {
    "cache_strategy": "cache_first",
    "offline_page": "offline.html",
    "fallback_page": "offline.html"
  },
  "author": {
    "name": "zophlic",
    "email": "zophlic@example.com",
    "website": "https://github.com/danny-dis/happy-teens-movie-project"
  }
}
